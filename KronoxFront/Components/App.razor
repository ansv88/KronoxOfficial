<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <!-- Bootstrap, FontAwesome, egna stilar -->
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="css/app.css" />
    <link rel="stylesheet" href="KronoxFront.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Anaheim:wght@400..800&display=swap" rel="stylesheet">

    <HeadOutlet @rendermode="InteractiveServer" />

    <!-- TinyMCE -->
    <script src="/lib/tinymce/tinymce.min.js" defer></script>
    <script src="js/tinymce-config.js"></script>

    <script>
        window.blazorInterop = {
            ready: false,
            initialize: function() {
                console.log("Blazor JS Interop initierad");
                window.blazorInterop.ready = true;
            }
        };
    </script>
</head>

<body class="d-flex flex-column min-vh-100">
    <Routes @rendermode="InteractiveServer" />
    
    <div id="toast-container" class="toast-container position-fixed bottom-0 end-0 p-3">
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
    <script src="_framework/blazor.server.js"></script>
    <script>
        // Säkerställ att Blazor är helt laddat innan interaktion
        window.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                if (window.blazorInterop) {
                    window.blazorInterop.initialize();
                }
            }, 500);
        });
    </script>
</body>

</html>