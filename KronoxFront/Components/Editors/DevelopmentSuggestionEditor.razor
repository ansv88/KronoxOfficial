@using KronoxFront.Services
@using KronoxFront.Components.Shared.Admin

<AdminSectionFrame Title="Utvecklingsförslag"
                   IconClass="fa-solid fa-lightbulb"
                   ShowAdminButton="true"
                   AdminButtonUrl="/admin/suggestions"
                   AdminButtonText="Hantera förslag"
                   AdminButtonIcon="fa-solid fa-list">
    <ChildContent>
        <div class="alert alert-info mb-3">
            <i class="fa-solid fa-info-circle me-2"></i>
            <strong>Status:</strong> Utvecklingsförslagformuläret visas automatiskt när det är aktiverat.
        </div>
        <p class="text-muted mb-3">
            Formuläret låter användare skicka in utvecklingsförslag för systemet.
            Alla förslag sparas i systemet och kan granskas av administratörer.
        </p>
    </ChildContent>
</AdminSectionFrame>

@code {
    [Parameter] public string PageKey { get; set; } = "";
}