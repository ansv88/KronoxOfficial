@using KronoxFront.Services
@inject CmsService Cms

<div class="card mb-4">
    <div class="card-header bg-light">
        <h3 class="h5 mb-0">
            <i class="fa-solid fa-lightbulb me-2"></i>Utvecklingsförslagformulär
        </h3>
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-3">
            <i class="fa-solid fa-info-circle me-2"></i>
            <strong>Status:</strong> Utvecklingsförslagformuläret visas automatiskt när det är aktiverat.
        </div>
        <p class="text-muted mb-3">
            Formuläret låter användare skicka in utvecklingsförslag för systemet.
            Alla förslag sparas i systemet och kan granskas av administratörer.
        </p>
        <div class="d-flex gap-2">
            <a href="/admin/suggestions" class="btn btn-primary">
                <i class="fa-solid fa-list me-1"></i>
                Visa inskickade förslag
            </a>
            <a href="/@PageKey" class="btn btn-outline-secondary" target="_blank">
                <i class="fa-solid fa-eye me-1"></i>
                Förhandsgranska sidan
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string PageKey { get; set; } = "";
}